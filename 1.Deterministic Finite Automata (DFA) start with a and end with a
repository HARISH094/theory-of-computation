#include <stdio.h>
#include <string.h>
#include <stdbool.h>

#define MAX_LEN 100

bool is_valid_state(char state) {
    return (state == 'a');
}

bool validate_input_string(char str[]) {
    int len = strlen(str);
    if (len < 2) {
        return false;
    }
    if (str[0] != 'a' || str[len-1] != 'a') {
        return false;
    }
    for (int i = 1; i < len-1; i++) {
        if (!is_valid_state(str[i])) {
            return false;
        }
    }
    return true;
}

int main() {
    char input_str[MAX_LEN];
    printf("Enter the input string: ");
    scanf("%s", input_str);
    if (validate_input_string(input_str)) {
        printf("The string is accepted by the DFA.\n");
    } else {
        printf("The string is not accepted by the DFA.\n");
    }
    return 0;
}
